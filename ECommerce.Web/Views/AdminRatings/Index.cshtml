@model IEnumerable<RatingAdminViewModel>

@{
    ViewData["Title"] = "Ratings Management";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

    int page = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
}

<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-star-half text-warning"></i> Ratings Management
    </h2>

    <form class="row g-3 mb-4">

        <div class="col-md-2">
            <label class="fw-semibold">Stars</label>
            <select name="stars" class="form-select">
                <option value="">All</option>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i ★</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <label class="fw-semibold">Product ID</label>
            <input name="productId" class="form-control" placeholder="Product ID" />
        </div>

        <div class="col-md-3">
            <label class="fw-semibold">Username</label>
            <input name="username" class="form-control" placeholder="Username" />
        </div>

        <div class="col-md-3">
            <label class="fw-semibold">Email</label>
            <input name="email" class="form-control" placeholder="Email" />
        </div>

        <div class="col-md-1">
            <label class="fw-semibold">Sort</label>
            <select name="sort" class="form-select">
                <option value="newest">Newest</option>
                <option value="oldest">Oldest</option>
                <option value="stars_high">Stars ↑</option>
                <option value="stars_low">Stars ↓</option>
            </select>
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit"
                    class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2 rounded-pill">
                <i class="bi bi-search"></i>
                Search
            </button>
        </div>

    </form>

    <div class="card shadow-sm p-4">

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>User</th>
                        <th>Product</th>
                        <th>Stars</th>
                        <th>Date</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Id</td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/images/users/@(r.UserThumbnail ?? r.UserImage ?? "default.png")"
                                             width="42" height="42"
                                             class="rounded-circle me-2"
                                             style="object-fit:cover" />
                                        <div>
                                            <div class="fw-semibold">@r.UserName</div>
                                            <small class="text-muted">@r.Email</small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <a href="/Products/Details/@r.ProductId" class="fw-semibold">
                                        @r.ProductName
                                    </a>
                                </td>

                                <td>
                                    <span class="badge bg-warning text-dark">
                                        @r.Stars ★
                                    </span>
                                    <div class="small text-muted mt-1">
                                        @r.Comment
                                    </div>
                                </td>

                                <td>@r.CreatedAt.ToString("yyyy-MM-dd")</td>

                                <td class="text-end">

                                    <a href="/AdminRatings/Details/@r.Id"
                                       class="btn btn-sm btn-outline-primary me-1"
                                       title="View Rating Details">
                                        <i class="bi bi-eye"></i> View
                                    </a>

                                    <form method="post"
                                          action="/AdminRatings/Delete/@r.Id"
                                          class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger"
                                                title="Delete Rating"
                                                onclick="return confirm('Are you sure you want to delete this rating?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>

                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No ratings found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">

                    <li class="page-item @(page == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(page - 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(page == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(page + 1)">Next</a>
                    </li>

                </ul>
            </nav>
        }

    </div>

</div>
