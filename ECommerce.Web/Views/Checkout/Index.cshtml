@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">

    <!-- Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">
            <i class="bi bi-credit-card"></i> Checkout
        </h2>
        <p class="text-muted mb-0">
            Shipping details → Review order → Payment
        </p>
    </div>

    <form asp-action="PlaceOrder"
          asp-controller="Checkout"
          method="post"
          id="checkoutForm">

        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly"
             class="alert alert-danger d-"
             id="validationSummary"></div>

        <div class="row g-4">

            <div class="col-lg-7">
                <div class="card shadow-sm border-0 p-4 h-100">

                    <h4 class="fw-bold mb-3">
                        <i class="bi bi-person"></i> Shipping Information
                    </h4>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Full Name</label>
                        <input asp-for="FullName"
                               class="form-control form-control-lg"
                               placeholder="e.g. John Doe" />
                        <span asp-validation-for="FullName"
                              class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Full Address</label>
                        <textarea asp-for="Address"
                                  class="form-control form-control-lg"
                                  rows="3"
                                  placeholder="Apartment, street, city, country"></textarea>
                        <span asp-validation-for="Address"
                              class="text-danger small"></span>
                    </div>

                    <div class="alert alert-info mt-4 d-flex align-items-center gap-2">
                        <i class="bi bi-shield-lock fs-5"></i>
                        <span>Your information is encrypted and secure.</span>
                    </div>

                </div>
            </div>

            <div class="col-lg-5">
                <div class="card shadow border-0 p-4 sticky-top"
                     style="top: 90px;">

                    <h4 class="fw-bold mb-3">
                        <i class="bi bi-bag"></i> Order Summary
                    </h4>

                    <div class="table-responsive mb-3">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr class="text-muted small">
                                    <th>Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end fw-semibold">
                                            $@item.Total
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-semibold">Total Amount</span>
                        <span class="fw-bold fs-4 text-success">
                            $@Model.Cart.Total
                        </span>
                    </div>

                    <button type="submit"
                            id="placeOrderBtn"
                            class="btn btn-primary btn-lg w-100 shadow-sm">
                        <span class="btn-text">
                            <i class="bi bi-check2-circle"></i> Place Order
                        </span>
                        <span class="spinner-border spinner-border-sm d-none"
                              role="status"
                              aria-hidden="true"></span>
                    </button>

                    <a href="/Cart"
                       class="btn btn-outline-secondary w-100 mt-3">
                        <i class="bi bi-arrow-left"></i> Back to Cart
                    </a>

                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
  
    <partial name="_ValidationScriptsPartial" />

    <script>
        const form = document.getElementById("checkoutForm");
        const btn = document.getElementById("placeOrderBtn");
        const spinner = btn.querySelector(".spinner-border");
        const text = btn.querySelector(".btn-text");

        form.addEventListener("submit", function () {

            if (!$(form).valid()) {
                return;
            }

            btn.disabled = true;
            text.classList.add("d-none");
            spinner.classList.remove("d-none");
        });

        document.addEventListener("DOMContentLoaded", function () {
            const hasErrors =
                document.querySelector(".field-validation-error") ||
                document.querySelector(".validation-summary-errors");

            if (hasErrors) {
                btn.disabled = false;
                spinner.classList.add("d-none");
                text.classList.remove("d-none");
            }
        });
    </script>
}

