@model ECommerce.Core.Entities.Order
@using ECommerce.Core.Enums
@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-receipt-cutoff"></i> Order #@Model.Id
    </h2>

   

    <!-- Cancelled Alert -->
    @if (Model.Status == OrderStatus.Cancelled)
    {
        <div class="alert alert-warning">
            <i class="bi bi-x-octagon"></i> <strong>This order has been cancelled.</strong>
        </div>
    }

    <div class="row g-4">
        <!-- Order Info + Shipping -->
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="fw-bold mb-3">Order Information</h5>
                            <p class="mb-2"><strong>Date:</strong> @Model.OrderDate.ToString("dddd, MMMM dd, yyyy - hh:mm tt")</p>
                            <p class="mb-2"><strong>Total Amount:</strong> <span class="text-success fw-bold fs-5">$@Model.TotalAmount.ToString("F2")</span></p>

                            <p class="mb-2">
                                <strong>Order Status:</strong>
                                @{
                                    var statusBadge = Model.Status switch
                                    {
                                        OrderStatus.Pending => "bg-warning text-dark",
                                        OrderStatus.Processing => "bg-info text-dark",
                                        OrderStatus.Completed => "bg-success",
                                        OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusBadge fs-6">@Model.Status</span>
                            </p>

                            <p class="mb-2">
                                <strong>Payment Status:</strong>
                                @{
                                    var paymentBadge = Model.PaymentStatus switch
                                    {
                                        PaymentStatus.Paid => "bg-success",
                                        PaymentStatus.Unpaid => "bg-warning text-dark",
                                        PaymentStatus.Failed => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @paymentBadge fs-6">@Model.PaymentStatus</span>
                            </p>

                            @if (!string.IsNullOrWhiteSpace(Model.PaymentReference))
                            {
                                <p class="mb-2"><strong>Payment Reference:</strong> @Model.PaymentReference</p>
                            }
                        </div>

                        <div class="col-md-6">
                            <h5 class="fw-bold mb-3">Shipping Address</h5>
                            <p class="mb-2"><strong>Name:</strong> @Model.FullName</p>
                            <p class="mb-0"><strong>Address:</strong> @Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3">Order Items (@(Model.Items?.Count ?? 0))</h4>

                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Unit Price</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        var productName = item.Product?.Name ?? "Product Not Available";
                                        var thumbnail = item.Product?.ThumbnailUrl ?? item.Product?.ImageUrl;

                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (thumbnail != null)
                                                    {
                                                        <img src="@thumbnail" alt="@productName" class="me-3 rounded" width="60" height="60" style="object-fit: cover;" />
                                                    }
                                                    <div>
                                                        <div class="fw-semibold">@productName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center fw-bold">@item.Quantity</td>
                                            <td class="text-center">$@item.UnitPrice.ToString("F2")</td>
                                            <td class="text-end fw-bold text-success">$@(item.Quantity* item.UnitPrice):F2</td>
                                        </tr>
                                    }
                                    <tr class="table-active">
                                        <td colspan="3" class="text-end fw-bold fs-5">Grand Total:</td>
                                        <td class="text-end fw-bold text-success fs-5">$@Model.TotalAmount.ToString("F2")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-3">No items found in this order.</p>
                        </div>
                    }

                    <div class="mt-4 text-end">
                        @if (Model.Status == OrderStatus.Pending)
                        {
                            <a href="/Orders/EditAddress/@Model.Id" class="btn btn-outline-warning me-2">
                                <i class="bi bi-pencil"></i> Edit Address
                            </a>
                        }

                        <a href="/Orders/MyOrders" class="btn btn-secondary px-5">
                            <i class="bi bi-arrow-left"></i> Back to My Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>