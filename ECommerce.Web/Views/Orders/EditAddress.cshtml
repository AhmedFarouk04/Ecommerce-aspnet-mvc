@model ECommerce.Web.ViewModels.EditAddressViewModel
@{
    ViewData["Title"] = "Edit Shipping Address";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-truck"></i> Edit Shipping Address - Order #@Model.OrderId
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="EditAddress" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OrderId" />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="form-label fw-bold">Shipping Address</label>
                    <textarea asp-for="Address" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check2-circle"></i> Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Order Details
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

