@model IEnumerable<ECommerce.Core.Entities.Wishlist>

@{
    ViewData["Title"] = "My Wishlist ❤️";
}

<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-heart-fill text-danger"></i> My Wishlist
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Your wishlist is empty.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">

                    <div class="card shadow-sm h-100">

                        <img src="@(item.Product.ImageUrl != null
                                                         ? "/images/products/" + item.Product.ImageUrl
                                                         : "/images/no-image.png")"
                     class="card-img-top"
                     style="height:220px; object-fit:cover;" />

                        <div class="card-body">

                            <h5 class="fw-bold">@item.Product.Name</h5>
                            <p class="text-muted small mb-1">@item.Product.Category?.Name</p>

                            <p class="fw-bold text-success">$@item.Product.Price</p>

                            <div class="d-grid gap-2">

                                <a href="/Products/Details/@item.ProductId"
                                   class="btn btn-outline-primary btn-sm">View</a>

                                <button class="btn btn-outline-danger btn-sm js-remove-wishlist"
                                        data-id="@item.ProductId">
                                    <i class="bi bi-trash"></i> Remove
                                </button>

                            </div>

                        </div>

                    </div>

                </div>
                }
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll(".js-remove-wishlist").forEach(btn => {
            btn.addEventListener("click", async function () {

                const id = this.dataset.id;

                const response = await fetch("/Wishlist/Remove", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/x-www-form-urlencoded",
                        "X-Requested-With": "XMLHttpRequest"
                    },
                    body: new URLSearchParams({ productId: id })
                });

                const res = await response.json();

                if (res.success) {
                    location.reload();
                } else {
                    alert(res.message ?? "Error removing item");
                }
            });
        });
    </script>
}
