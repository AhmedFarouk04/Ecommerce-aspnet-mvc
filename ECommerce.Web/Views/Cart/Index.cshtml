@model ECommerce.Application.DTOs.CartDto

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-cart-check"></i> Shopping Cart
    </h2>

    @if (TempData["CartError"] != null)
    {
        <div class="alert alert-danger shadow-sm p-3 fs-6 mb-4">
            <i class="bi bi-exclamation-circle"></i>
            @TempData["CartError"]
        </div>
    }

    @if (Model.IsEmpty)
    {
        <div class="alert alert-info p-5 text-center fs-4 shadow-sm">
            Your cart is empty.
            <a href="/Products" class="fw-bold text-primary">Start shopping</a>
        </div>
        return;
    }

    <div class="row">

        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm p-4">

                @foreach (var item in Model.Items)
                {
                    <div id="cart-row-@item.ProductId" class="cart-item">
                        @await Html.PartialAsync("_CartItem", item)
                    </div>
                }

            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow p-4 sticky-top" style="top: 90px;">

                <h4 class="fw-bold mb-3">Order Summary</h4>

                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Items:</span>
                    <span id="orderItemsCount">@Model.Count</span>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Total Amount:</span>
                    <span id="orderTotal" class="fw-bold text-success">
                        $@Model.Total.ToString("0.00")
                    </span>
                </div>

                <hr />

                <a href="/Checkout" class="btn btn-success w-100 btn-lg mt-3">
                    Proceed to Checkout
                    <i class="bi bi-arrow-right-circle ms-2"></i>
                </a>

            </div>
        </div>

    </div>

</div>


<style>
    .cart-item:hover {
        background: #f8f9fa;
        transition: 0.2s;
    }

    .sticky-top {
        position: sticky !important;
    }
</style>
