@model IEnumerable<ECommerce.Core.Entities.AdminActivityLog>

@{
    ViewData["Title"] = "Admin Activity Logs";
     Layout = "~/Views/Admin/_AdminLayout.cshtml";


    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 15;
}

<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-clipboard-data"></i> Admin Activity Logs
    </h2>

    <div class="card shadow-sm p-4 mb-4">
        <form method="get" class="row g-3">

            <div class="col-md-4">
                <label class="form-label fw-bold">Search</label>
                <input type="text"
                       name="search"
                       value="@ViewBag.Search"
                       class="form-control"
                       placeholder="Search action or target..." />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Admin</label>
                <select name="admin" class="form-select">
                    <option value="">All</option>

                    @if (ViewBag.UniqueAdmins != null)
                    {
                        foreach (var a in ViewBag.UniqueAdmins)
                        {
                            <option value="@a" selected="@(ViewBag.Admin == a)">
                                @a
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Action</label>
                <select name="actionName" class="form-select">
                    <option value="">All</option>

                    @if (ViewBag.UniqueActions != null)
                    {
                        foreach (var act in ViewBag.UniqueActions)
                        {
                            <option value="@act" selected="@(ViewBag.ActionName  == act)">
                                @act
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-12 text-end">
                <button class="btn btn-primary px-4">
                    <i class="bi bi-funnel"></i> Apply Filters
                </button>
            </div>

        </form>
    </div>


    <div class="card shadow-sm p-3">

        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Admin</th>
                    <th>Action</th>
                    <th>Target</th>
                    <th>IP Address</th>
                    <th>Timestamp</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var log in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@log.Actor</td>

                            <td>
                                <span class="badge bg-info text-dark">@log.Action</span>
                            </td>

                            <td>@log.Target</td>

                            <td class="text-muted">@log.IPAddress</td>

                            <td>
                                <small class="text-secondary">
                                    @log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd hh:mm tt")
                                </small>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="bi bi-inbox fs-1"></i>
                            <p>No logs available.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (totalPages > 1)
        {
            <nav aria-label="Logs pagination">
                <ul class="pagination justify-content-center">

                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           href="?page=@(currentPage - 1)&pageSize=@pageSize
    &search=@ViewBag.Search
    &admin=@ViewBag.Admin
    &actionName=@ViewBag.ActionName">
                           Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link"
                               href="?page=@i
        &search=@ViewBag.Search
        &admin=@ViewBag.Admin
        &actionName=@ViewBag.ActionName">
                                @i
                            </a>

                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link"
                           href="?page=@(currentPage + 1)&pageSize=@pageSize&search=@ViewBag.Search&admin=@ViewBag.Admin&actionName=@ViewBag.ActionName">
                            Next
                        </a>
                    </li>

                </ul>
            </nav>
        }

    </div>

</div>
