@{
    var path = Context.Request.Path.Value?.ToLower() ?? "";

    bool IsActive(string startsWith)
        => path.StartsWith(startsWith, StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>

<body class="bg-light">

    <div class="admin-topbar border-bottom bg-white shadow-sm">
        <div class="container-fluid px-4 py-2 d-flex align-items-center justify-content-between">

            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-shield-lock text-primary"></i>
                <strong>Admin Panel</strong>
                <span class="text-muted small">| E-Commerce</span>
            </div>

            <div class="d-flex align-items-center gap-2">
                <a href="/" class="btn btn-sm btn-outline-secondary rounded-pill">
                    <i class="bi bi-shop"></i> Back to Store
                </a>

                <a href="/Account/Logout" class="btn btn-sm btn-outline-danger rounded-pill">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>

        </div>
    </div>

    <div class="d-flex">

        <aside class="admin-sidebar">

            <div class="admin-sidebar-header">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-cart-check fs-4 text-primary"></i>
                    <div>
                        <div class="fw-bold">E-Commerce</div>
                        <div class="text-muted small">Admin</div>
                    </div>
                </div>
            </div>

            <nav class="admin-nav">

                <a class="admin-link @(path == "/admin" ? "active" : "")" href="/Admin">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <div class="admin-section">Catalog</div>

                <a class="admin-link @(IsActive("/products") ? "active" : "")" href="/Products">
                    <i class="bi bi-box"></i> Products
                </a>

                <a class="admin-link @(IsActive("/category") ? "active" : "")" href="/Category">
                    <i class="bi bi-tags"></i> Categories
                </a>

                <div class="admin-section">Management</div>

                <a class="admin-link @(IsActive("/adminorders") ? "active" : "")" href="/AdminOrders">
                    <i class="bi bi-receipt"></i> Orders
                </a>

                <a class="admin-link @(IsActive("/adminreviews") ? "active" : "")" href="/AdminReviews">
                    <i class="bi bi-chat-left-text"></i> Reviews
                </a>

                <a class="admin-link @(IsActive("/adminratings") ? "active" : "")" href="/AdminRatings">
                    <i class="bi bi-star-half"></i> Ratings
                </a>

                <a class="admin-link @(IsActive("/adminwishlist") ? "active" : "")" href="/AdminWishlist">
                    <i class="bi bi-heart"></i> Wishlist
                </a>

                <a class="admin-link @(IsActive("/admin/users") ? "active" : "")"
                   asp-controller="Admin" asp-action="Users">
                    <i class="bi bi-people"></i> Manage Users
                </a>

                <div class="admin-section">System</div>

                <a class="admin-link @(IsActive("/admin/activitylogs") ? "active" : "")"
                   asp-controller="Admin" asp-action="ActivityLogs">
                    <i class="bi bi-clipboard-data"></i> Activity Logs
                </a>

            </nav>
        </aside>

        <main class="admin-content flex-grow-1">
            <div class="container-fluid px-4 py-4">
                @RenderBody()
            </div>
        </main>

    </div>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">

                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <p class="mb-1">Are you sure you want to delete this item?</p>
                    <small class="text-muted">This action cannot be undone.</small>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        Cancel
                    </button>

                    <button type="button"
                            class="btn btn-danger"
                            id="confirmDeleteBtn">
                        Delete
                    </button>
                </div>

            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let deleteForm = null;

        function openDeleteModal(button) {
            deleteForm = button.closest("form");
            const modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
            modal.show();
        }

        document.getElementById("confirmDeleteBtn").addEventListener("click", function () {
            if (deleteForm) {
                deleteForm.submit();
            }
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
