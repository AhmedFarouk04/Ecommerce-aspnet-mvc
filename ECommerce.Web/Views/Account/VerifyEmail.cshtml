@model ECommerce.Web.ViewModels.VerifyEmailViewModel

@{
    ViewData["Title"] = "Verify Email";
}

<div class="container mt-5" style="max-width:500px;">
    <div class="card shadow-lg">
        <div class="card-body p-4">

            <h3 class="text-center mb-3">Verify Your Email</h3>
            <p class="text-muted text-center mb-4">
                A 6-digit code was sent to: <strong>@ViewBag.Email</strong>
            </p>

            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info">@TempData["Info"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <form asp-action="VerifyEmail" method="post">
                @Html.AntiForgeryToken()


                <div class="mb-3">
                    <label class="form-label">Verification Code</label>
                    <input asp-for="Code"
                           class="form-control text-center fs-4"
                           maxlength="6" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Verify Email
                </button>
            </form>

            <div class="text-center mt-3">
                <form asp-action="ResendCode" method="post">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-link p-0">Resend Code</button>
                </form>
            </div>

            <div class="text-center mt-2">
                <a href="/Account/Register">Back to Register</a>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
