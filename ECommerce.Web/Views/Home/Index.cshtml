@{
    ViewData["Title"] = "Home";
}

<section class="hero-section mb-5">
    <div class="hero-wrapper rounded-4 shadow-sm d-flex align-items-center justify-content-center">
        <div class="hero-content text-center p-4 p-md-5 rounded-4 shadow-lg">

            <h1 class="fw-bold display-5 mb-3 text-dark">
                Welcome to Our E-Commerce Store
            </h1>

            @if (User.Identity.IsAuthenticated)
            {
                <p class="lead text-secondary">
                    Welcome back, <strong>@User.Identity.Name</strong> 👋
                </p>
            }
            else
            {
                <p class="lead text-secondary">
                    Discover trending products, exclusive deals, and top-rated items.
                </p>
            }

            <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
                <a href="/Products" class="btn btn-primary btn-lg px-4 rounded-pill">
                    <i class="bi bi-bag-fill me-1"></i> Browse Products
                </a>

                <a href="/Category" class="btn btn-outline-dark btn-lg px-4 rounded-pill">
                    <i class="bi bi-tags-fill me-1"></i> Categories
                </a>
            </div>

            @if (!User.Identity.IsAuthenticated)
            {
                <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
                    <a href="/Account/Login" class="btn btn-success btn-lg px-4 rounded-pill">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                    </a>

                    <a href="/Account/Register" class="btn btn-warning btn-lg px-4 rounded-pill">
                        <i class="bi bi-person-plus-fill me-1"></i> Register
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .hero-wrapper {
        background: linear-gradient(135deg, rgba(59,130,246,0.22) 0%, rgba(203,213,225,0.25) 50%, rgba(234,179,8,0.22) 100%);
        padding: 55px 20px;
        border-radius: 20px;
    }

    .hero-content {
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        max-width: 720px;
    }

    @@media (max-width: 768px) {
        .hero-wrapper {
            padding: 38px 15px;
        }
    }
</style>



<section class="container my-5">
    <h3 class="fw-bold mb-4 text-center">Shop by Category</h3>

    <div class="row g-4 justify-content-center">
        @foreach (var category in Model.Categories)
        {
            <div class="col-6 col-md-3">
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id" class="text-decoration-none">
                    <div class="feature-box p-4 bg-white rounded-4 shadow-sm h-100 text-center hover-lift">
                        @{
                            var iconClass = category.Name.ToLower() switch
                            {
                                "electronics" => "bi bi-phone text-primary",
                                "accessories" => "bi bi-watch text-success",
                                "fashion" => "bi bi-bag text-warning",
                                "home" => "bi bi-house-check text-danger",
                                _ => "bi bi-grid-3x3-gap text-info"
                            };
                        }
                        <i class="@iconClass fs-1"></i>
                        <h6 class="mt-3 fw-bold text-dark">@category.Name</h6>
                    </div>
                </a>
            </div>
        }
    </div>
</section>

<section class="container my-5 py-5 bg-light rounded-4">
    <div class="text-center mb-5">
        <h3 class="fw-bold display-6">Why Shop With Us?</h3>
        <p class="lead text-muted">We’re committed to providing the best shopping experience</p>
    </div>

    <div class="row g-4 text-center">
        <div class="col-6 col-md-3">
            <div class="feature-box p-4 bg-white rounded-4 shadow-sm h-100">
                <i class="bi bi-shield-check text-primary fs-1"></i>
                <h5 class="mt-3 fw-bold">Secure Payments</h5>
                <p class="text-muted small">100% encrypted transactions.<br>Your data is always safe.</p>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="feature-box p-4 bg-white rounded-4 shadow-sm h-100">
                <i class="bi bi-truck text-success fs-1"></i>
                <h5 class="mt-3 fw-bold">Fast Delivery</h5>
                <p class="text-muted small">Quick & reliable shipping.<br>Get your order in no time.</p>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="feature-box p-4 bg-white rounded-4 shadow-sm h-100">
                <i class="bi bi-star-fill text-warning fs-1"></i>
                <h5 class="mt-3 fw-bold">Top Rated</h5>
                <p class="text-muted small">Highly reviewed products.<br>Quality you can trust.</p>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="feature-box p-4 bg-white rounded-4 shadow-sm h-100">
                <i class="bi bi-headset text-danger fs-1"></i>
                <h5 class="mt-3 fw-bold">24/7 Support</h5>
                <p class="text-muted small">We’re always ready to help.<br>Contact us anytime.</p>
            </div>
        </div>
    </div>
</section>




<style>

    .product-image-wrapper {
        height: 210px;
        overflow: hidden;
        border-radius: 16px 16px 0 0;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform .3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.06);
    }

    .animate-card {
        transition: transform .25s ease, box-shadow .25s ease;
    }

        .animate-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 14px 28px rgba(0,0,0,0.15);
        }

    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.12) !important;
        }

    .feature-box {
        transition: all 0.3s ease;
    }
</style>


@if (User.IsInRole("Admin"))
{
    <div class="container mt-5">
        <hr class="my-5" />

        <div class="alert alert-info shadow-sm rounded-4">
            <h4 class="fw-bold">Admin Shortcuts</h4>

            <div class="mt-3">
                <a href="/Admin" class="btn btn-danger me-2 rounded-pill">Admin Panel</a>
                <a href="/Products/Create" class="btn btn-success rounded-pill">+ Add Product</a>
            </div>
        </div>
    </div>
}
