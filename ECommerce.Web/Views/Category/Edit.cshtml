@model ECommerce.Application.DTOs.CategoryDto

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container my-4">

    <div class="card shadow p-4">

        <h3 class="fw-bold mb-3">
            <i class="bi bi-pencil-square"></i> Edit Category
        </h3>

        @if (!User.IsInRole("Admin"))
        {
            <div class="alert alert-danger">
                Access Denied
            </div>

            <a asp-action="Index" class="btn btn-secondary w-100">
                Back to List
            </a>
        }
        else
        {
            <form asp-action="Edit" method="post" novalidate>

                <input type="hidden" asp-for="Id" />

                <partial name="_CategoryForm" model="Model" />

                <div class="d-flex flex-column gap-2 mt-3">

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-save"></i> Save Changes
                    </button>

                    <a asp-action="Index" class="btn btn-secondary w-100">
                        Back to List
                    </a>

                </div>

            </form>
        }

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
