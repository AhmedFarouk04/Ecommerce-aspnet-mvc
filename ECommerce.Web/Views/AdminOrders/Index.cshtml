@model IEnumerable<ECommerce.Web.ViewModels.AdminOrderViewModel>
@using ECommerce.Core.Enums

@{
    ViewData["Title"] = "Orders Management";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

    var currentSearch = Context.Request.Query["search"].ToString();
    var currentStatus = Context.Request.Query["status"].ToString();
    var currentPaymentStatus = Context.Request.Query["paymentStatus"].ToString();
    var currentSort = Context.Request.Query["sort"].ToString();

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
}
@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}


<div class="container my-5">

    <h2 class="fw-bold mb-4">
        <i class="bi bi-receipt"></i> Orders Management
    </h2>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">

                <div class="col-md-4">
                    <label class="form-label fw-bold">Search</label>
                    <input type="text"
                           name="search"
                           class="form-control"
                           placeholder="Order ID, user name, or email"
                           value="@currentSearch" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Order Status</label>
                    <select name="status" class="form-select">
                        <option value="">All</option>
                        <option value="Pending" selected="@(currentStatus == "Pending")">Pending</option>
                        <option value="Processing" selected="@(currentStatus == "Processing")">Processing</option>
                        <option value="Completed" selected="@(currentStatus == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(currentStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold">Payment</label>
                    <select name="paymentStatus" class="form-select">
                        <option value="">All</option>
                        <option value="Paid" selected="@(currentPaymentStatus == "Paid")">Paid</option>
                        <option value="Unpaid" selected="@(currentPaymentStatus == "Unpaid")">Unpaid</option>
                        <option value="Failed" selected="@(currentPaymentStatus == "Failed")">Failed</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold">Sort By</label>
                    <select name="sort" class="form-select">
                        <option value="">Newest First</option>
                        <option value="date_asc" selected="@(currentSort == "date_asc")">Oldest First</option>
                        <option value="total_high" selected="@(currentSort == "total_high")">Total (High → Low)</option>
                        <option value="total_low" selected="@(currentSort == "total_low")">Total (Low → High)</option>
                        <option value="user_asc" selected="@(currentSort == "user_asc")">User (A → Z)</option>
                        <option value="user_desc" selected="@(currentSort == "user_desc")">User (Z → A)</option>
                        <option value="status" selected="@(currentSort == "status")">Status</option>
                        <option value="payment" selected="@(currentSort == "payment")">Payment</option>
                    </select>
                </div>

                <div class="col-12 text-end">
                    <button class="btn btn-primary px-4 mt-2">
                        <i class="bi bi-funnel"></i> Apply Filters
                    </button>
                </div>

            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Order</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th>Total</th>
                            <th>Items</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = (currentPage - 1) * pageSize + 1;
                        }

                        @if (Model != null && Model.Any())
                        {
                            foreach (var o in Model)
                            {
                                <tr>
                                    <td>@index</td>

                                    <td>
                                        <div class="fw-bold">#@o.Id</div>
                                        <small class="text-muted">@o.OrderDate.ToString("yyyy-MM-dd HH:mm")</small>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="/images/users/@(o.UserThumbnail ?? o.UserImage ?? "default.png")"
                                                 class="rounded-circle me-2 shadow-sm"
                                                 width="42" height="42"
                                                 style="object-fit:cover;" />
                                            <div>
                                                <div class="fw-semibold">@o.UserName</div>
                                                <small class="text-muted">@o.Email</small>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge bg-light text-dark">
                                            @o.OrderDate.ToString("dd MMM yyyy")
                                        </span>
                                        <br />
                                        <small class="text-muted">@o.OrderDate.ToString("hh:mm tt")</small>
                                    </td>

                                    <td>
                                        @{
                                            string statusClass = o.Status switch
                                            {
                                                OrderStatus.Pending => "bg-warning text-dark",
                                                OrderStatus.Processing => "bg-info text-dark",
                                                OrderStatus.Completed => "bg-success",
                                                OrderStatus.Cancelled => "bg-secondary",
                                                _ => "bg-light text-dark"
                                            };
                                        }
                                        <span class="badge @statusClass">@o.Status</span>
                                    </td>

                                    <td>
                                        @{
                                            string payClass = o.PaymentStatus switch
                                            {
                                                PaymentStatus.Paid => "bg-success",
                                                PaymentStatus.Unpaid => "bg-secondary",
                                                PaymentStatus.Failed => "bg-danger",
                                                _ => "bg-light text-dark"
                                            };
                                        }
                                        <span class="badge @payClass">@o.PaymentStatus</span>
                                    </td>

                                    <td class="fw-bold text-success">
                                        $@o.TotalAmount
                                    </td>

                                    <td>
                                        <span class="badge bg-primary">
                                            @o.ItemsCount
                                        </span>
                                    </td>
                                    <td class="text-end">

                                        <a asp-action="Details"
                                           asp-route-id="@o.Id"
                                           asp-route-returnUrl="@returnUrl"
                                           class="btn btn-sm btn-outline-primary me-2">
                                            <i class="bi bi-eye"></i> Details
                                        </a>

                                        <a asp-action="ChangeStatus"
                                           asp-route-id="@o.Id"
                                           asp-route-returnUrl="@returnUrl"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil-square"></i> Status
                                        </a>

                                    </td>


                                </tr>

                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4 text-muted">
                                    <i class="bi bi-inbox fs-1"></i>
                                    <p class="mb-0">No orders found.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <nav aria-label="Orders pagination" class="mt-3">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               href="?page=@(currentPage - 1)&pageSize=@pageSize&search=@currentSearch&status=@currentStatus&paymentStatus=@currentPaymentStatus&sort=@currentSort">
                                Previous
                            </a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link"
                                   href="?page=@i&pageSize=@pageSize&search=@currentSearch&status=@currentStatus&paymentStatus=@currentPaymentStatus&sort=@currentSort">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link"
                               href="?page=@(currentPage + 1)&pageSize=@pageSize&search=@currentSearch&status=@currentStatus&paymentStatus=@currentPaymentStatus&sort=@currentSort">
                                Next
                            </a>
                        </li>

                    </ul>
                </nav>
            }

        </div>
    </div>

</div>
