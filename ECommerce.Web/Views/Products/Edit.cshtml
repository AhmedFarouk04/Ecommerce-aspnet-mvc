@model ECommerce.Web.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container my-5">

    <div class="card-theme">

        <div class="card-theme-header text-warning">
            <i class="bi bi-pencil-square"></i> Edit Product
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <partial name="_ProductForm" model="Model" />

            <div class="mt-4 d-flex gap-2">

                <button type="submit" class="btn-theme btn-primary-theme">
                    <i class="bi bi-save"></i> Save Changes
                </button>

                <a href="javascript:history.back()" class="btn-theme btn-secondary-theme">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>

            </div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
